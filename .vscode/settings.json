{
  "files.associations": {
    "*.h": "c",
    "*.c": "c"
  },
  "C_Cpp.default.cStandard": "c11",
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
  "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",
  "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
  "cmake.buildDirectory": "${workspaceFolder}/build",
  "cmake.configureSettings": {
    "CMAKE_BUILD_TYPE": "Debug",
    "SHADER_WORKS_USE_THREADS": "OFF",
    "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
  },
  "cmake.defaultVariants": {
    "buildType": {
      "default": "debug-single",
      "choices": {
        "debug-single": {
          "short": "Debug ST",
          "long": "Debug Single-threaded",
          "buildType": "Debug",
          "settings": {
            "SHADER_WORKS_USE_THREADS": "OFF"
          }
        },
        "debug-threaded": {
          "short": "Debug MT",
          "long": "Debug Multi-threaded",
          "buildType": "Debug",
          "settings": {
            "SHADER_WORKS_USE_THREADS": "ON"
          }
        },
        "release-single": {
          "short": "Release ST",
          "long": "Release Single-threaded",
          "buildType": "Release",
          "settings": {
            "SHADER_WORKS_USE_THREADS": "OFF"
          }
        },
        "release-threaded": {
          "short": "Release MT",
          "long": "Release Multi-threaded",
          "buildType": "Release",
          "settings": {
            "SHADER_WORKS_USE_THREADS": "ON"
          }
        }
      }
    }
  },
  "editor.formatOnSave": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.cwd": "${workspaceFolder}",
  "search.exclude": {
    "**/build*/**": true,
    "**/examples/lib/SDL/**": true
  },
  "files.exclude": {
    "**/build*/**": false,
    "**/examples/lib/SDL/build*/**": true
  },
  "files.watcherExclude": {
    "**/build*/**": true,
    "**/examples/lib/SDL/**": true
  }
}